col = #df205b

style
  text-align left
  white-space normal
  font bold 1.1rem "Fira Sans", sans-serif

div.search
  width 100%
  height 30px
  background #caa5df
  & form
    padding 4px
    & input[type='text']
      width 60%

header
  width 100%
  background-image url("https://w.forfun.com/fetch/72/72a87cebb1e60ad7c13ca3b68d39310a.jpeg")
  background-position center
  background-position-y 950px
  height 250px
  & div.menu
    display flex
    flex-wrap nowrap
    justify-content space-around
    width 100%
    color white
    & span
      padding-top 25px
      font 1.2rem "Fira Sans", sans-serif
  & span.color
    color greenyellow
  & h1
    padding-top 100px
    text-align center
    color col

article
  & div.block
    display flex
    flex-direction row
    width 80%
    margin-left 10%
    margin-right 10%
    margin-top 10px
    margin-bottom 10px
    & div.block1
      display block
      width 60%
      margin-right 5%
      & img
        width 50%
        float left
        height 550px
      & h2
        style
      & span
        white-space normal
        text-align justify
    & div.block2
      display flex
      flex-direction column
      width 40%
      margin-left 5%
      & div.block3
        background #f8f7ef
        height 50%
        margin 1%
        padding 1%
        float left
        overflow hidden
        text-overflow ellipsis
        & img
          width 50%
          float left
          height 80px
        & h2
          style
        & span
          float left
          text-align justify
          white-space normal

footer
  width 100%
  height 30px
  border-top double col thick
  & span.right
    float right

@media all and (max-width: 900px)
  header
    visibility hidden
    height 100px
    & div.menu
      visibility visible
      height 100px
      flex-flow column wrap
      color black
      text-align center
    & span.color
      color col
  article
    & div.block
      flex-flow column
      & div.block1
        width 100%
        margin auto
      & div.block2
        width 100%
        margin auto
        & div.block3
          & img
            height 150px